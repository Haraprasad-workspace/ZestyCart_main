    <div class="login flex items-center justify-center min-h-screen ">

        <form class="border-4 border-white-30 p-10 rounded-lg" action="/admin/additem" method="post" enctype="multipart/form-data">
            <h2 class="text-center text-3xl text-white mb-7 font-bold">ADD a new food item</h2>
            <input name="itemname" type="text" placeholder="Item name" required
                class="w-full px-5 mb-4 py-3 rounded-lg bg-white-70 " />
            <br>
            <input name="price" type="number" placeholder="Price(in Rupees)" required
                class="w-full px-5 mb-4 py-3 rounded-lg bg-white-70" />
            <br>
            <input name="imageurl" type="file" required
                class="w-full px-5 mb-4 py-3 rounded-lg bg-white-70" />
            <br>
            <textarea cols=40  name="description" type="text" placeholder="description" required
                class=" mb-4 bg-white-70"></textarea>
            <br>

            <input type="submit" value="Add Item" class="bg-yellow-400 p-1 mt-5 rounded-lg w-full">
        </form>


    </div>
