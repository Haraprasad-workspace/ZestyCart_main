  <!-- ------------- -->
    <div class="flex items-center justify-center min-h-screen ">

        <form class="border-4 border-white-30 p-10 rounded-lg" action="/admin/edit_info/<%=item._id%>" method="post">
            <h2 class="text-center text-3xl text-white mb-7 font-bold">Edit existing food items </h2>
            <label>Name:- </label>
            <input name="itemname" type="text" value="<%=item.itemname%>"
                class="w-full px-5 mb-4 py-3 rounded-lg bg-white-70 " />
            <br>
            <label>price:- </label>
            <input name="price" type="number" value="<%=item.price%>"
                class="w-full px-5 mb-4 py-3 rounded-lg bg-white-70" />
            <br>
            <label>description:- </label><br>

            <textarea cols=40  name="description" type="text" 
                class=" mb-4 bg-white-70"><%=item.description%></textarea>
            <br>

            <input type="submit" value="Edit Item" class="bg-yellow-400 p-1 mt-5 rounded-lg w-full">
        </form>


    </div>
    <div class="flex mt-10 mb-10 flex-wrap items-center justify-center gap-5">
        
